<form name="form-container" action="/courses/handle-form-action" method="POST">
  <div class="mt-4">
    Khóa học
  </div>
  <div class="mt-4 d-flex align-items-center">
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="checkBoxAll">
      <label class="form-check-label" for="checkBoxAll">Chọn tất cả</label>
    </div>

    <select class="form-control faction" name="action" required>
      <option value="">-- Hành động -- </option>
      <option value="restore">Khôi phục</option>
      <option value="deleteFocus">Xóa luôn</option>

    </select>
    <button class="btn btn-primary btn-sm btn-apply " disabled>Áp dụng</button>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col"></th>

        <th scope="col">#</th>
        <th scope="col">Tên</th>
        <th scope="col">Thời gian xóa</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" name="courseIds[]" value="{{this._id}}">
          </div>
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.deletedAt}}</td>
        <td>
          <a href="" class="btn btn-link btn-restore" data-id={{this._id}}>Khôi phục</a>
          <a href="#" class="btn btn-link btn-delete-focus" data-id={{this._id}}>Xóa luôn</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="5" class="text-center">
          Thùng rác trống
          <a href="/store/courses/">Xem khóa học</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</form>
<form name="delete-course" method="POST"> </form>
<form name="focusDelete-course" method="POST"> </form>
<form name="restore-course" method="POST"> </form>


<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có muốn xóa khóa học</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
        <button type="button" class="btn btn-danger" data-accept="modal" id="deletebtn2">Xóa</button>
      </div>
    </div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', function () {
    var courseId;

    var deleteCourse = document.forms['delete-course'];
    var restoreCourse = document.forms['restore-course'];
    var focusDelete = document.forms['focusDelete-course'];
    var btndelete = document.querySelector('#deletebtn2');
    var btnRestore = $('.btn-restore');
    var btnDeleteFocus = $('.btn-delete-focus');
    var checkBoxAll = $('#checkBoxAll');
    var formContainer = $('form[name="form-container"]');
    var courseItemCheckbox = $('input[name="courseIds[]"]')

    $('#deleteModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      courseId = button.data('id');
    })

    btndelete.onclick = () => {
      deleteCourse.action = '/courses/' + courseId + '?_method=DELETE';
      deleteCourse.submit();
    }

    btnRestore.click(function (e) {
      e.preventDefault();
      var id = $(this).data('id');
      restoreCourse.action = '/courses/' + id + '/restore?_method=PATCH';
      restoreCourse.submit();
    })

    btnDeleteFocus.click(function (e) {
      e.preventDefault();
      var id = $(this).data('id');
      focusDelete.action = '/courses/' + id + '/focus?_method=delete';
      focusDelete.submit();
    })


    checkBoxAll.change(function () {
      var ischeck = $(this).prop('checked');
      courseItemCheckbox.prop('checked', ischeck);
      enableBtn($('input[name="courseIds[]"]:checked').length);
    });
    courseItemCheckbox.change(function () {
      var ischeck = courseItemCheckbox.length === $('input[name="courseIds[]"]:checked').length;
      checkBoxAll.prop('checked', ischeck);
      enableBtn($('input[name="courseIds[]"]:checked').length);
    })

    var btnApply = $('.btn-apply');

    formContainer.on('submit',function(e){
      var isSubmittalbe = !$(btnApply).hasClass('disabled');
      if (!isSubmittalbe){
        e.preventDefault();
      }
    })

    function enableBtn(number) {
      if (number > 0) {
        btnApply.attr('disabled',false);
      }
      else {
        btnApply.attr('disabled',true);
      }
    }
  })
</script>