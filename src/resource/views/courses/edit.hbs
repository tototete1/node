<div class="mt-4">
    <h3>Sửa khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">{{course.name}}</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="des">Mô tả</label>
            <input type="text" class="form-control" value="{{course.des}}" id="des" name="des">
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        
        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
    </form>
</div>

